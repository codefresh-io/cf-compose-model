{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/index.js"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run local",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "args": ["debug"],
            "runtimeExecutable": "/usr/local/bin/yarn",
            "runtimeVersion": "12.22.4",
            "env": {
                "CODEFRESH_HOST": "https://local.codefresh.io",
            },
            "outputCapture": "std",
            "program": "${workspaceFolder}/index.js"
        }
    ]
}